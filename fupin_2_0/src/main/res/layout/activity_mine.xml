<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/top_title_strues"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/activity_title_toolbar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_0.5"
        android:background="@color/gray_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_45"
        android:background="@color/white"
        android:paddingLeft="@dimen/padding_20"
        android:paddingRight="@dimen/padding_20" >

        <TextView
            style="@style/text_style"
            android:layout_centerVertical="true"
            android:text="@string/name"
            android:textColor="@color/black" />

        <TextView
            android:id="@id/tv_name"
            style="@style/text_style"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/name" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_0.5"
        android:layout_marginLeft="@dimen/layout_20"
        android:background="@color/gray_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_45"
        android:background="@color/white"
        android:paddingLeft="@dimen/padding_20"
        android:visibility="gone"
        android:paddingRight="@dimen/padding_20" >

        <TextView
            style="@style/text_style"
            android:layout_centerVertical="true"
            android:text="@string/title"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_zhicheng"
            style="@style/text_style"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/name" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_10"
        android:background="@drawable/mine_top_line_2_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_45"
        android:background="@color/white"
        android:paddingLeft="@dimen/padding_20"
        android:paddingRight="@dimen/padding_20" >

        <TextView
            style="@style/text_style"
            android:layout_centerVertical="true"
            android:text="@string/sex"
            android:textColor="@color/black" />

        <TextView
            android:id="@id/tv_sex"
            style="@style/text_style"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/name" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_0.5"
        android:layout_marginLeft="@dimen/layout_20"
        android:background="@color/gray_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_45"
        android:background="@color/white"
        android:paddingLeft="@dimen/padding_20"
        android:paddingRight="@dimen/padding_20" >

        <TextView
            style="@style/text_style"
            android:layout_centerVertical="true"
            android:text="@string/birthday"
            android:textColor="@color/black" />

        <TextView
            android:id="@id/tv_date"
            style="@style/text_style"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/name" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_0.5"
        android:layout_marginLeft="@dimen/layout_20"
        android:background="@color/gray_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_45"
        android:background="@color/white"
        android:paddingLeft="@dimen/padding_20"
        android:paddingRight="@dimen/padding_20" >

        <TextView
            style="@style/text_style"
            android:layout_centerVertical="true"
            android:text="@string/phone"
            android:textColor="@color/black" />

        <TextView
            android:id="@id/tv_phone"
            style="@style/text_style"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/name" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_0.5"
        android:layout_marginLeft="@dimen/layout_20"
        android:background="@color/gray_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_45"
        android:background="@color/white"
        android:paddingLeft="@dimen/padding_20"
        android:paddingRight="@dimen/padding_20" >

        <TextView
            style="@style/text_style"
            android:layout_centerVertical="true"
            android:text="@string/highestdegree"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_highestdegree"
            style="@style/text_style"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/name" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_0.5"
        android:background="@color/gray_line" />

</LinearLayout>