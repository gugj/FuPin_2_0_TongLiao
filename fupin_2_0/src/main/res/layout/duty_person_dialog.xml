<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_40"
        android:background="@color/color_145bba"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            style="@style/text_style"
            android:text="@string/duty_person"
            android:textColor="@color/white" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_duty_person"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/driver"
        android:dividerHeight="@dimen/layout_0.5" >
    </ListView>

</LinearLayout>