<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_5"
    android:paddingLeft="@dimen/padding_20"
    android:paddingRight="@dimen/padding_20"
    android:paddingTop="@dimen/padding_5" >

    <!-- 就业培训培训人员item -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@id/tv_name"
            style="@style/text_style"
            android:textColor="@color/black" />

        <TextView
            style="@style/text_style"
            android:layout_marginLeft="@dimen/margin_5"
            android:text="@string/douhao"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_jy_state"
            style="@style/text_style"
            android:layout_marginLeft="@dimen/margin_5"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/padding_5" >

        <TextView
            android:id="@+id/tv_work_state"
            style="@style/text_style"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/gray_878787"
            android:textSize="@dimen/textSize_13" />

        <TextView
            android:id="@id/tv_money"
            style="@style/text_style"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/gray_878787"
            android:textSize="@dimen/textSize_13" />

        <TextView
            android:id="@id/tv_company"
            style="@style/text_style"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:textColor="@color/gray_878787"
            android:textSize="@dimen/textSize_13" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/padding_5" >

        <TextView
            android:id="@id/tv_date"
            style="@style/text_style"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/gray_878787"
            android:textSize="@dimen/textSize_15" />

        <TextView
            android:id="@id/tv_zeren_people"
            style="@style/text_style"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/gray_878787"
            android:textSize="@dimen/textSize_13" />

        <TextView
            android:id="@id/tv_phone"
            style="@style/text_style"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ico_phone"
            android:drawablePadding="@dimen/padding_3"
            android:textColor="@color/gray_878787"
            android:textSize="@dimen/textSize_13" />
    </LinearLayout>

</LinearLayout>