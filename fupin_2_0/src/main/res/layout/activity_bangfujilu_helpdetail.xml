<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/top_title_strues"
    android:background="@color/white"
    android:orientation="vertical" >
    <include layout="@layout/activity_title_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/Title_Padding_10" >

        <TextView 
            android:id="@+id/tv_bfjl_helptitle"
            style="@style/text_style"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="王铁良帮扶记录"/>
        
        <TextView
            android:id="@+id/tv_bfjl_helpdate"
            style="@style/text_style"
            android:layout_width="match_parent"
            android:gravity="right"
            android:textSize="14sp"
            android:layout_marginTop="@dimen/Title_Padding_10"
            android:text="2016-08-16" />
        
        <WebView 
            android:id="@+id/tv_bfjl_helpdetail"
            style="@style/text_style"
            android:layout_marginTop="@dimen/Title_Padding_10"
            />
        
