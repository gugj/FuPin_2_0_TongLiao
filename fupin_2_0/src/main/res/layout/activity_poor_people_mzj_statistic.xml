<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/top_title_strues"
    android:orientation="vertical" >

    <include layout="@layout/activity_title_toolbar" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@color/black"
        android:minHeight="@dimen/layout_50"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/margin_0.5"
            android:layout_marginRight="@dimen/margin_0.5"
            android:layout_marginTop="@dimen/margin_0.5"
            android:layout_weight="2"
            android:background="@color/white"
            android:gravity="center"
            android:text="@string/xingzhengqu"
            android:textColor="@color/black" />

        <com.roch.fupin.view.TPQKTableScrollView
            android:id="@+id/item_scroll_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/margin_0.5"
            android:layout_weight="1"
            android:background="@color/white"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:layout_marginLeft="@dimen/margin_0.5"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="200dip"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="@string/ddrjcsrzdbz"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/margin_0.5"
                        android:layout_weight="1"
                        android:background="@color/black"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="100dip"
                            android:layout_height="fill_parent"
                            android:background="@color/white"
                            android:gravity="center"
                            android:text="@string/hs"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="100dip"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="@dimen/margin_0.5"
                            android:background="@color/white"
                            android:gravity="center"
                            android:text="@string/rs"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/black"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="200dip"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="@string/no_ddrjcsrzdbz"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginLeft="@dimen/margin_0.5"
                        android:layout_marginTop="@dimen/margin_0.5"
                        android:layout_weight="1"
                        android:background="@color/black"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="100dip"
                            android:layout_height="fill_parent"
                            android:background="@color/white"
                            android:gravity="center"
                            android:text="@string/hs"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="100dip"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="@dimen/margin_0.5"
                            android:layout_marginRight="@dimen/margin_0.5"
                            android:background="@color/white"
                            android:gravity="center"
                            android:text="@string/rs"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.roch.fupin.view.TPQKTableScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:background="@color/black"
        android:orientation="horizontal" >

        <ListView
            android:id="@+id/hlistview_scroll_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/margin_0.5"
            android:background="@color/white"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@color/black"
            android:dividerHeight="@dimen/layout_0.5"
            android:fadingEdge="none"
            android:scrollbars="none" >
        </ListView>
    </LinearLayout>

</LinearLayout>