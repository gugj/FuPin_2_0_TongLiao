<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/top_title_strues"
              android:orientation="vertical"
              android:background="@drawable/mine_top_line_2_bg">

    <include layout="@layout/activity_title_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:background="@drawable/denglukuang_bg"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tv_username"
            style="@style/text_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:text="原密码 ：" />

        <com.roch.fupin.view.ClearEditText
            android:id="@+id/edt_old_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_toRightOf="@+id/tv_username"
            android:background="@null"
            android:hint="请输入原始密码"
            android:inputType="textPassword"
            android:textSize="@dimen/textSize_15" >
        </com.roch.fupin.view.ClearEditText>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_15"
        android:background="@drawable/denglukuang_bg" >

        <TextView
            android:id="@+id/password"
            style="@style/text_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:text="新密码 ：" />

        <com.roch.fupin.view.ClearEditText
            android:id="@+id/edt_new_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_toRightOf="@+id/password"
            android:background="@null"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:textSize="@dimen/textSize_15" >
        </com.roch.fupin.view.ClearEditText>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_15"
        android:background="@drawable/denglukuang_bg" >

        <TextView
            android:id="@+id/password2"
            style="@style/text_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:text="再次确认：" />

        <com.roch.fupin.view.ClearEditText
            android:id="@+id/edt_new_pwd2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_toRightOf="@+id/password2"
            android:background="@null"
            android:hint="请再次输入新密码"
            android:inputType="textPassword"
            android:textSize="@dimen/textSize_15" >
        </com.roch.fupin.view.ClearEditText>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            >
            <Button
                android:id="@+id/btn_quxiao"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="取消"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            >
            <Button
                android:id="@+id/btn_quding"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="确定"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>