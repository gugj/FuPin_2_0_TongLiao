<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <!-- ImageView   com.roch.fupin.view.CircleImageView -->
    <com.roch.fupin.view.CircleImageView
        android:id="@id/iv_user_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/margin_10"
        android:contentDescription="@string/hello_world"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/margin_5"
        android:layout_toRightOf="@id/iv_user_head"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@id/tv_name"
                style="@style/listview_item_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="left"
                android:text="霍林河社区"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_15" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:orientation="horizontal" >

            <TextView
                android:id="@id/tv_zeren_people"
                style="@style/listview_item_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ico_cardnum"
                android:drawablePadding="@dimen/padding_5"
                android:ellipsize="middle"
                android:singleLine="true"
                android:text="李新义" />

            <TextView
                android:id="@id/tv_phone"
                style="@style/listview_item_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ico_phone"
                android:drawablePadding="@dimen/padding_5"
                android:maxLength="11"
                android:singleLine="true"
                android:text="15235462567" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:orientation="horizontal" >

            <TextView
                android:id="@id/tv_people_count"
                style="@style/listview_item_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ico_income"
                android:drawablePadding="@dimen/padding_5"
                android:ellipsize="middle"
                android:singleLine="true"
                android:text="共有1390人" />

            <TextView
                android:id="@id/tv_poor_count"
                style="@style/listview_item_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ico_people_num"
                android:drawablePadding="@dimen/padding_5"
                android:ellipsize="middle"
                android:singleLine="true"
                android:text="贫困户9户" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5" >

            <TextView
                android:id="@id/tv_address"
                style="@style/listview_item_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:drawableLeft="@drawable/ico_address"
                android:drawablePadding="@dimen/padding_5"
                android:ellipsize="middle"
                android:singleLine="true"
                android:text="@string/zeren_people" />

            <TextView
                android:id="@id/tv_zhiwei"
                style="@style/listview_item_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:drawablePadding="@dimen/padding_5"
                android:ellipsize="middle"
                android:singleLine="true" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>