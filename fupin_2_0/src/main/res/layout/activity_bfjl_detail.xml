<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/ll_bg"
              style="@style/top_title_strues"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical">

    <include layout="@layout/activity_title_toolbar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:text="标题："/>
            <EditText
                android:id="@+id/et_bfjl_title"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:paddingLeft="6dp"
                android:layout_marginRight="5dp"
                android:text=""
                android:background="@drawable/bg_edittext"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:text="时间："/>
            <TextView
                android:id="@+id/tv_bfjl_time"
                android:layout_width="85dp"
                android:layout_height="25dp"
                android:paddingTop="3dp"
                android:paddingLeft="6dp"
                android:textColor="@color/black"
                android:background="@drawable/bg_edittext"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:text="位置："
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_bfjl_location"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:layout_height="25dp"
                android:paddingTop="6dp"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/ico_address"
                android:drawablePadding="5dp"
                android:text=""
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <EditText
                android:id="@+id/et_bfjl_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/bg_edittext"
                android:gravity="left"
                android:padding="10dp"
                android:hint="请输入内容..."/>
        </LinearLayout>

        <GridView
            android:id="@id/gv_photo"
            style="@style/gridview_style"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:layout_margin="@dimen/margin_3"
            android:horizontalSpacing="@dimen/layout_0.5"
            android:verticalSpacing="@dimen/layout_0.5"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            >
            <Button
                android:id="@+id/btn_commit"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="提交"/>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>