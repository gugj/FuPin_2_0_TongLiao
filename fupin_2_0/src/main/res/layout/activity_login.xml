<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/longin_tongliao"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="@dimen/layout_260"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:background="@drawable/denglukuang_bg" >

        <TextView
            android:id="@+id/tv_username"
            style="@style/text_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:text="@string/username" />

        <com.roch.fupin.view.ClearEditText
            android:id="@id/edt_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_toRightOf="@+id/tv_username"
            android:background="@null"
            android:hint="@string/username_hini"
            android:textSize="@dimen/textSize_15" >
        </com.roch.fupin.view.ClearEditText>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/layout_260"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_15"
        android:background="@drawable/denglukuang_bg" >

        <TextView
            android:id="@+id/password"
            style="@style/text_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:text="@string/password" />

        <com.roch.fupin.view.ClearEditText
            android:id="@id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_toRightOf="@+id/password"
            android:background="@null"
            android:hint="@string/password_hini"
            android:inputType="textPassword"
            android:textSize="@dimen/textSize_15" >
        </com.roch.fupin.view.ClearEditText>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/layout_260"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_10"
        android:visibility="visible" >

        <CheckBox 
            android:id="@+id/cb_remember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/textSize_16"
            android:textColor="@color/white"
            android:text="记住用户名和密码"
            />
        
        <TextView
            android:id="@+id/tv_server"
            style="@style/title_text"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_10"
            android:text="@string/server_setting" />
    </RelativeLayout>

    <Button
        android:id="@id/btn_login"
        android:layout_width="@dimen/layout_260"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_30"
        android:layout_marginRight="@dimen/padding_30"
        android:layout_marginTop="@dimen/margin_40"
        android:background="@drawable/button_selector"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_15" />

    <!-- 测试生成二维码用 -->
    <ImageView
        android:id="@+id/iv_qr_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp" />
</LinearLayout>