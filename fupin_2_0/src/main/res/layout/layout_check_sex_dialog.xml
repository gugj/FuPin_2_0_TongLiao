<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_chat_menu_item_bg_normal"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_frame_on_bg"
        android:gravity="center" >

        <TextView
            android:id="@id/tv_notic"
            style="@style/text_style"
            android:padding="@dimen/padding_10"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/check_call_phone_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_frame_on_bg"
        android:clickable="true"
        android:gravity="center" >

        <TextView
            style="@style/text_style"
            android:padding="@dimen/padding_10"
            android:text="@string/call_phone"
            android:textColor="@color/black" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/hello_world"
        android:src="#d9d9d9" />

    <LinearLayout
        android:id="@+id/check_save_phone_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_frame_down_bg"
        android:clickable="true"
        android:gravity="center" >

        <TextView
            style="@style/text_style"
            android:padding="@dimen/padding_10"
            android:text="@string/save_phone"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/check_phone_dialog_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/dialog_frame_round_bg"
        android:clickable="true"
        android:gravity="center" >

        <TextView
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_10"
            android:text="@string/cancel"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>