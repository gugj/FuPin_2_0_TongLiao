<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/top_title_strues"
    android:orientation="vertical" >

    <include layout="@layout/activity_title_toolbar" />

    <com.roch.fupin.view.ExpandTabView
        android:id="@+id/expandtab_view"
        android:layout_width="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:layout_height="@dimen/layout_45" />

    <include layout="@layout/layout_view_horizontal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10" >

        <TextView
            android:id="@id/tv_time"
            style="@style/text_style"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_16" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@color/black"
        android:minHeight="@dimen/layout_50"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/margin_0.5"
            android:layout_marginRight="@dimen/margin_0.5"
            android:layout_marginTop="@dimen/margin_0.5"
            android:layout_weight="2"
            android:background="@color/white"
            android:gravity="center"
            android:text="@string/xingzhengqu"
            android:textColor="@color/black" />

        <com.roch.fupin.view.FPZXZJTableScrollView
            android:id="@+id/item_scroll_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/margin_0.5"
            android:layout_weight="1"
            android:background="@color/white"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_0.5"
                    android:background="@color/black"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="资金来源(万元)"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/margin_0.5"
                        android:layout_weight="1"
                        android:background="@color/black"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="fill_parent"
                            android:background="@color/white"
                            android:gravity="center"
                            android:text="中央(自治区)资金"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="@dimen/margin_0.5"
                            android:background="@color/white"
                            android:gravity="center"
                            android:text="市级资金"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="@dimen/margin_0.5"
                            android:background="@color/white"
                            android:gravity="center"
                            android:text="旗县级资金"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/black"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="@dimen/margin_0.5"
                        android:layout_marginRight="@dimen/margin_0.5"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="资金类型(万元)"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginLeft="@dimen/margin_0.5"
                        android:layout_marginTop="@dimen/margin_0.5"
                        android:layout_weight="1"
                        android:background="@color/black"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="fill_parent"
                            android:background="@color/white"
                            android:gravity="center"
                            android:text="发展资金(三西资金)"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="@dimen/margin_0.5"
                            android:layout_marginRight="@dimen/margin_0.5"
                            android:background="@color/white"
                            android:gravity="center"
                            android:text="以工代账资金"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="@dimen/margin_0.5"
                            android:layout_marginRight="@dimen/margin_0.5"
                            android:background="@color/white"
                            android:gravity="center"
                            android:text="少数民族发展资金"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="@dimen/margin_0.5"
                            android:layout_marginRight="@dimen/margin_0.5"
                            android:background="@color/white"
                            android:gravity="center"
                            android:text="国有贫困林场资金"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="@dimen/margin_0.5"
                            android:layout_marginRight="@dimen/margin_0.5"
                            android:background="@color/white"
                            android:gravity="center"
                            android:text="国有贫困农场资金"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="@dimen/margin_0.5"
                            android:layout_marginRight="@dimen/margin_0.5"
                            android:background="@color/white"
                            android:gravity="center"
                            android:text="发展资金(管理费)"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.roch.fupin.view.FPZXZJTableScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:background="@color/black"
        android:orientation="horizontal" >

        <ListView
            android:id="@+id/hlistview_scroll_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/margin_0.5"
            android:background="@color/white"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@color/black"
            android:dividerHeight="@dimen/layout_0.5"
            android:fadingEdge="none"
            android:scrollbars="none" >
        </ListView>
    </LinearLayout>

</LinearLayout>